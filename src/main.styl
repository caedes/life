@import url(http://fonts.googleapis.com/css?family=Open+Sans)

body
  margin 0
  background-color #212222
  color #fff
  font-family 'Open Sans', sans-serif

header
  background-color #52BC84
  width 100%
  height 110px
  position fixed

  h1
    margin 0
    padding 30px
    font-weight normal
    text-align center

#timeline
  padding-top 110px
  padding-left 50%

  ul
    width 400px
    height 100%
    margin 0 0 0 -200px
    text-align left
    border-left 2px solid #43956C

    li
      padding 20px 0 0 0
      list-style-type none
      color #bbb
      font-size 1.4em
      &:hover
        color #fff

      .date
        font-size .6em
