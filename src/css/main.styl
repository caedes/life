@import '_vars'

body
  margin 0
  background-color $backgroundColor
  color #fff
  font-family 'Open Sans', sans-serif

header
  background-color $headerColor
  width 100%
  height 3em
  position fixed

  h1
    margin 0
    font-weight normal
    text-align center
    font-size 1.3em
    padding-top .5em

#timeline
  padding-top 5em

  ul
    width 100%
    height 100%
    padding 0

    li
      list-style-type none
      color #bbb
      font-size 1.4em
      &:hover
        color #fff

      .date
        font-size .6em
