@import '_vars'

body
  margin 0
  background-color $backgroundColor
  color #fff
  font-family 'Open Sans', sans-serif

header
  background-color $headerColor
  width 100%
  height 5em
  position fixed

  h1
    margin 0
    padding .5em
    font-weight normal
    text-align center

#timeline
  padding-top 110px
  padding-left 50%

  ul
    width 300px
    height 100%
    margin 0 0 0 -150px
    text-align left

    li
      list-style-type none
      color #bbb
      font-size 1.4em
      &:hover
        color #fff

      .date
        font-size .6em
