@import '_vars'

body
  margin 0
  background-color $backgroundColor
  color $appTitleColor
  font-family 'Open Sans', sans-serif

header
  background-color $headerColor
  width 100%
  height 3em
  position fixed

  h1
    margin 0
    font-weight normal
    text-align center
    font-size 1.3em
    padding-top .5em

#timeline
  padding-top 3em

  ul
    width 100%
    height 100%
    padding 0
    margin 0

    li
      list-style-type none
      color $eventTitleColor
      font-size 1.4em
      margin .2em 0
      padding .2em
      background-color $eventBackgroundColor

      .date
        font-size .6em
